<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".details_all"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/header">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="30sp"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:id="@+id/usernames"
        android:textColor="#fff"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Name"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/names"
        android:textColor="#fff"
        android:enabled="false"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:textColor="#fff"
        android:id="@+id/passwords"
        android:enabled="false"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Category"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:enabled="false"
        android:id="@+id/category"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:id="@+id/phone_number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joining Date: "
            android:textSize="20sp"
            android:textColor="#fff"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Joining Date"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:enabled="false"
        android:id="@+id/joiningdate"
        android:textColor="#fff"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Last Update: "
            android:textColor="#fff"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Last update"
        android:padding="10dp"
        android:enabled="false"
        android:id="@+id/lastupdated"
        android:textColor="#fff"
        />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Update Detail"
        android:id="@+id/update_detail"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/cardview_light_background"
        android:onClick="updetail"
        />
</LinearLayout>